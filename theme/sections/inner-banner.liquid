
{{ 'inner-banner.css' | asset_url | stylesheet_tag }}

<style>
    :root .color-custom {
      --theme-color:{{ section.settings.section_text_color_scheme }};
      --theme-heading:{{ section.settings.section_heading_color_scheme }};
      --theme-sub-heading:{{ section.settings.section_sub_heading_color_scheme }};
      --theme-link-color:{{ section.settings.section_links_color_scheme }};
      --theme-background:{{ section.settings.section_background_color_scheme }};
    }
</style>


<section class="image_text_section inner-banner section-{{section.id}} relative color-{{ section.settings.color_scheme }}" id="shopify-{{ section.id }}">
    <div class="container mobile_custom">
        <div class="image_text_row flex flex-col 1440Width:min-h-[350px] 4xl:min-h-[399px] {{ section.settings.image_position}}">
            <div class="image_panel absolute top-0 bottom-0">
                {%- if section.settings.url-image != blank -%}
                    <img class="lazyload w-full h-full object-cover" src="{{ section.settings.url-image | image_url }}" alt="{{ section.settings.url-image.alt }}">
                {%- endif -%}
            </div>            
            <div class="text-black-box flex items-center px-[25px] px-0 py-8 py-10 py-14 py-[70px] py-[90px]">
                <div class="text-{{ section.settings.align__text__mobile }} w-full max-w-[571px]">
                    <h2 class="pb-5 md:pb-6 font-dmserif font-normal text-font27 md:text-font30 lg:text-font40">
                        {{ section.settings.main_title }}
                    </h2>
                    <div class="space-y-5 xl:space-y-9 pb-1 font-inter font-normal text-font14 md:text-font16">
                        {{ section.settings.content_description }}
                    </div>
                </div>
            </div>  
        </div>
    </div>
</section>
  
  <style>
        
        .image_text_section.inner-banner .flex-col {
          flex-direction: column !important;
        }
        @media (min-width: 768px) {
          .image_text_section.inner-banner .flex-row {
              flex-direction: row !important;
            }
            .image_text_section.inner-banner .flex-row .image_panel {
              left: auto;
              right: 0;
            }
            .image_text_section.inner-banner .flex-row .text-black-box {
                padding-right: 50px;
            }

            .image_text_section.inner-banner .flex-row-reverse {
              flex-direction: row-reverse !important;
            }
            .image_text_section.inner-banner .flex-row-reverse .image_panel {
              right: auto;
              left: 0;
            }

            .image_text_section.inner-banner .flex-row-reverse .text-black-box {
                padding-left: 50px;
            }
       }
       @media (min-width: 1440px) {
            .image_text_section.inner-banner .flex-row .text-black-box {
                padding-right: 70px;
            }
            .image_text_section.inner-banner .flex-row-reverse .text-black-box {
                padding-left: 70px;
            }
       }
  </style>
  
  
  {% schema %}
  {
      "name": "Inner Banner",
      "settings": [
          {
              "type": "header",
              "content": "Image"
          },

          {
              "type": "select",
              "id": "image_position",
              "label": "Image position (desktop)",
              "default": "flex-row",
              "options": [
                  {
                      "value": "flex-row",
                      "label": "Right"
                  },
                  {
                      "value": "flex-row-reverse",
                      "label": "Left"
                  }
              ]
          },
          {
              "type": "image_picker",
              "id": "url-image",
              "label": "image"
          },
          {
              "type": "header",
              "content": "Heading text"
          },
          {
              "type": "text",
              "id": "main_title",
              "label": "Heading"
          },
          {
              "type": "richtext",
              "id": "content_description",
              "label": "Text"
          },
          {
            "type": "select",
            "id": "align__text",
            "label": "Text alignment Desktop",
            "default": "center",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Centered"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        },
        {
            "type": "select",
            "id": "align__text__mobile",
            "label": "Text Alignment Mobile",
            "default": "center",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Centered"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ]
        },
          {
              "type": "header",
              "content": "Style"
            },
            {
              "type": "select",
              "id": "color_scheme",
              "label":"Color scheme",
              "default": "default",
              "options": [
                {
                  "value": "default",
                  "label": "Default"
                },
                {
                  "value": "scheme-1",
                  "label": "scheme 1"
                },
                {
                  "value": "scheme-2",
                  "label": "scheme 2"
                },
                {
                  "value": "custom",
                  "label": "custom (Set below)"
                }
              ]
          },
          {
              "type": "color",
              "id": "section_text_color_scheme",
              "default": "#847486",
              "label": "Custom Text Color"
          },
          {
              "type": "color",
              "id": "section_heading_color_scheme",
              "default": "#4B3B4C",
              "label": "Custom Heading Color"
          },
          {
              "type": "color",
              "id": "section_background_color_scheme",
              "default": "#FFF3EE",
              "label": "Custom Background Color"
          }
      ],
      "presets": [
          {
              "name": "Inner Banner"
          }
      ]
  }
  {% endschema %}
  
  
  
  
  
  
  
  
  
  
  
  